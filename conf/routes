# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Application.index

# USER
POST    /api/v1/admin/user                      controllers.UserController.createUser
GET     /api/v1/admin/user/:username            controllers.UserController.findUser(username: String)
DELETE  /api/v1/admin/user/:username            controllers.UserController.deleteUser(username: String)

# MESSAGES
POST    /api/v1/message                         controllers.MessageController.sendMessage
GET     /api/v1/message/:messageId              controllers.MessageController.getMessage(messageId: String, token: String)
GET     /api/v1/conversation/:conversationId    controllers.MessageController.getConversation(conversationId: String, token: String)

# TOKENS
GET     /api/v1/token                           controllers.TokenController.getToken
DELETE  /api/v1/token/:token                    controllers.TokenController.deleteToken(token: String)

#ASSETS
#POST    /api/v1/asset                          controllers.AssetController.uploadAsset





# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
