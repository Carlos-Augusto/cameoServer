# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


##
##   API
##

GET            /api/v1                                     controllers.Application.index

# USER
POST           /api/v1/admin/user                          controllers.UserController.createUser
GET            /api/v1/admin/user/:username                controllers.UserController.getUser(username: String)
DELETE         /api/v1/admin/user/:username                controllers.UserController.deleteUser(username: String)
GET            /api/v1/user                                controllers.UserController.getUserWithToken(token: String)

# MESSAGES
POST           /api/v1/message                             controllers.MessageController.sendMessage
GET            /api/v1/message/:messageId                  controllers.MessageController.getMessage(messageId: String, token: String)

# CONVERSATIONS
GET            /api/v1/conversation/:conversationId        controllers.ConversationController.getConversation(conversationId: String, token: String, offset: Int ?= 0, limit: Int ?= 0)
GET            /api/v1/conversations                       controllers.ConversationController.getConversations(token: String, offset: Int ?= 0, limit: Int ?= 0)

# TOKENS
OPTIONS        /api/v1/token                               controllers.TokenController.getToken
GET            /api/v1/token                               controllers.TokenController.getToken
DELETE         /api/v1/token/:token                        controllers.TokenController.deleteToken(token: String)

# CONTACTS
POST           /api/v1/contact                             controllers.ContactController.addContact
GET            /api/v1/contacts                            controllers.ContactController.getContacts(token: String, offset: Int ?= 0, limit: Int ?= 0)
GET            /api/v1/contact/:contactId                  controllers.ContactController.getContact(contactId: String, token: String)
GET            /api/v1/contact-groups                      controllers.ContactController.getGroups(token: String)
GET            /api/v1/contact-group/:groupName            controllers.ContactController.getGroup(groupName: String, token: String, offset: Int ?= 0, limit: Int ?= 0)

# ASSETS
POST           /api/v1/asset                               controllers.AssetController.uploadAsset(token: String, messageId: String)
GET            /api/v1/asset/:assetId                      controllers.AssetController.getAsset(token: String, assetId: String)

##
##   WebClient
##

# Redirect for Shorturls
GET            /c/:id                                      controllers.ShortUrlController.redirect(urlType = "c", id: String)

# The Webclient is static and comes from public/mobile
GET            /static/*file                               controllers.Assets.at(path="/public/mobile/static", file)
GET            /*foo                                       controllers.Application.staticAssets(path="/public/mobile", file="index.html", foo)
GET            /                                           controllers.Assets.at(path="/public/mobile", file="index.html")
