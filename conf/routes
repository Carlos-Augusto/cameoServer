# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


##
##   API
##
GET     /api/v1                                 controllers.Application.index

# USER
POST    /api/v1/admin/user                      controllers.UserController.createUser
GET     /api/v1/admin/user/:username            controllers.UserController.getUser(username: String)
DELETE  /api/v1/admin/user/:username            controllers.UserController.deleteUser(username: String)

# MESSAGES
POST    /api/v1/message                         controllers.MessageController.sendMessage
GET     /api/v1/message/:messageId              controllers.MessageController.getMessage(messageId: String, token: String)
GET     /api/v1/conversation/:conversationId    controllers.MessageController.getConversation(conversationId: String, token: String)

# TOKENS
GET     /api/v1/token                           controllers.TokenController.getToken
DELETE  /api/v1/token/:token                    controllers.TokenController.deleteToken(token: String)

# CONTACTS
POST    /api/v1/contact                         controllers.ContactsController.addContact
GET     /api/v1/contacts                        controllers.ContactsController.getContacts(token: String)
GET     /api/v1/contact/:contactId              controllers.ContactsController.getContact(contactId: String, token: String)
GET     /api/v1/contact-groups                  controllers.ContactsController.getGroups(token: String)
GET     /api/v1/contact-group/:groupName        controllers.ContactsController.getGroup(groupName: String, token: String)

#ASSETS
POST    /api/v1/asset                           controllers.AssetController.uploadAsset(token: String, messageId: String)
GET     /api/v1/asset/:assetId                  controllers.AssetController.getAsset(token: String, assetId: String)

##
##   WebClient
##

# Redirect for Shorturls
GET     /c/:id                                  controllers.ShortUrlController.redirect(urlType = "c", id: String)

# The Webclient is static and comes from public/mobile
GET     /                                       controllers.Assets.at(path="/public/mobile", file="index.html")
GET     /*file                                  controllers.Assets.at(path="/public/mobile", file)

